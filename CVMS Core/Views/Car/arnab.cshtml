            crossorigin="anonymous"></script>*@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyOsB1CZO+3eNECOI+gD9R6B/Q5SbGjN"
            crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            // Show the modal when the page is loaded
            $('#carDetailsModal').modal('show');

            // Handle form submission
            $('#carDetailsForm').submit(function (e) {
                e.preventDefault();
                // Add your logic to handle form submission here
                // You can retrieve form values using $('#carModel').val(), $('#carPrice').val(), etc.
                // Use AJAX to send the data to the server or any other preferred method
                // After handling the form, you may close the modal if needed
                $('#carDetailsModal').modal('hide');
            });
        });
    </script>

</body>
</html>
