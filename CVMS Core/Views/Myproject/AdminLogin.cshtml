<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

                <li class="nav-item active">
                    <a class="nav-link" id="home-btn" href="#">Home<span class="sr-only">(current)</span></a>
                </li>
                
                <li class="nav-item nav-item-right" style="margin-left: 1000px;">
                    <a href="#" id="signup-btn" class="nav-link badge badge-success">SignUp</a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center"> Login Page</h3>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("login", "Myproject", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName)
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary ">Login</button>

                             <div class="form-group text-right">
                           <span class="text-danger" id="spanMessage">@ViewData["ErrorMessage"]</span>
                             @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                             </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    
    <br />
    <br />
    <br />
    <br />
    <footer class="bg-dark text-light text-center py-3">
        <p>&copy; 2023 Your Company. All rights reserved.</p>
    </footer>


    <script>
        $('#home-btn').click(function () {
            window.location.href = 'https://localhost:7044/Myproject/Myhomepage';
        });
        $('#signup-btn').click(function () {
            window.location.href = 'https://localhost:7044/Myproject/CustomerSignuppage';
        });
    </script>
