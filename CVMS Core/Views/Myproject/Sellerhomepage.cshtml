
@{
    ViewData["Title"] = "Sellerhomepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Buy and Sell Module</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,300&display=swap">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="css/example-styles.css">
    <link rel="stylesheet" type="text/css" href="css/demo-styles.css">
    <link rel="stylesheet" href="css/style.css">
    <style>
        /* Add your custom styles here */
        .popup-form {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);   
            z-index: 9999;
        }

        .modal-body {
            max-height: 80vh;
            overflow-y: auto;
        }

        #submit-btn {
            position: sticky;
            bottom: 10px;
        }
    </style>


</head>
<body>
    <!-- Button to nav bar -->

    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
               
                <li class="nav-item active">
                    <a class="nav-link" id="Buyer-btn" href="#">Want To Buy <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="seller-btn" href="#">Want To Sell</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="home" href="#">Home</a>

                </li>
                <li class="nav-item nav-item-right" style="margin-left: 500px;">
                    <a href="#"id="logout" class="nav-link badge badge-success">Logout</a>
                </li>

            </ul>
        </div>
    </nav>

    <!-- Button to trigger the modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#carDetailsModal">
        Add Car Details
    </button>

    <!-- Modal -->
    <div class="modal" id="carDetailsModal" tabindex="-1" role="dialog" aria-labelledby="carDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="carDetailsModalLabel">Add Car Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Car Details Form -->
                    <form id="carDetailsForm">
                        <div class="container-fluid">
                            <div class="shadow-border mb-3 bg-light">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="Name">Customer Name:</label>
                                            <input type="text" class="form-control" id="name" required>
                                            <span class="error-message" id="name-error"></span>

                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="Mobile No">Mobile No:</label>
                                            <input type="text" class="form-control" id="mobile" required>
                                            <span class="error-message" id="mobile-error"></span>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="shadow-border mb-3 bg-light">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label class="label-dflt">Country</label>
                                            <select id="country" class="form-control">
                                                <option selected="" disabled >Select Country</option>
                                                @*<option>1</option>
                                                <option>2</option>*@
                                            </select>
                                            <span class="error-message" id="country-error"></span>

                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label class="label-dflt">State</label>
                                            <select id="state" class="form-control">
                                                <option selected="" disabled >Select State</option>
                                                <@*option>1</option>
                                                <option>2</option>*@
                                            </select>
                                            <span class="error-message" id="state-error"></span>

                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label class="label-dflt">City</label>
                                            <select id="city" class="form-control">
                                                <option selected="" disabled >Select city</option>
                                               @* <option>1</option>
                                                <option>2</option>*@
                                            </select>
                                            <span class="error-message" id="city-error"></span>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="shadow-border mb-3 bg-light">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label for="carModel">Car Model:</label>
                                            <input type="text" class="form-control" id="carModel" required>
                                            <span class="error-message" id="model-error"></span>

                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label for="carPrice">Price:</label>
                                            <input type="text" class="form-control" id="carPrice" required>
                                            <span class="error-message" id="price-error"></span>

                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label for="companyName">Company:</label>
                                            <input type="text" class="form-control" id="companyName" required>
                                            <span class="error-message" id="companyname-error"></span>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="shadow-border mb-3 bg-light">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label for="carColor">Color:</label>
                                            <input type="text" class="form-control" id="carColor" required>
                                            <span class="error-message" id="color-error"></span>

                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label for="usageYears">Years of Usage:</label>
                                            <input type="text" class="form-control" id="usageYears" required>
                                            <span class="error-message" id="use-error"></span>

                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label for="carCondition">Car Condition:</label>
                                            <select class="form-control" id="carCondition" required>
                                                <option selected="" disabled>Select condition</option>
                                                <option value="new">New</option>
                                                <option value="used">Used</option>
                                            </select>
                                            <span class="error-message" id="condition-error"></span>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="shadow-border mb-3 bg-light">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="mileage">Mileage:</label>
                                            <input type="text" class="form-control" id="mileage" required>
                                            <span class="error-message" id="mile-error"></span>

                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="remarks">Remarks:</label>
                                            <input type="text" class="form-control" id="remarks" required>
                                            <span class="error-message" id="remarks-error"></span>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row align-items-center mb-3">
                                <div class="col-12">
                                    <div class="input-group input-group-sm">
                    
                                        <input id="filepath2" type="file" class="form-control w-75" style="line-height: 15px;" name="" accept="image/*" required>
                                        <span class="error-message" id="file-error"></span>

                                    </div>
                                </div>
                                <div class="col-5 pl-0">
                                    <img src="" id="imagePreview1" data-toggle="modal" data-target="#imgPreviewModal1" class="uplImage img-fluid mr-2 " onclick="openImagePreview1()">
                                </div>
                            </div>
                            <input type="hidden" id="hiddenId" />
                            <button type="submit"id="submit-btn" class="btn btn-primary">Submit</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    @*<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyOsB1CZO+3eNECOI+gD9R6B/Q5SbGjN"
            crossorigin="anonymous"></script>
*@
    <script>
        $(document).ready(function () {
            $('#carDetailsModal').modal('show');

            // Handle form submission
            $('#carDetailsForm').submit(function (e) {
                e.preventDefault();
                
                $('#carDetailsModal').modal('hide');
            });
        });
        
        $('#Buyer-btn').click(function () {
            window.location.href = 'https://localhost:7044/Myproject/Buyerhomepage';
        });
        $('#seller-btn').click(function () {
            window.location.href = 'https://localhost:7044/Myproject/Sellerhomepage';
        });
        $('#home').click(function () {
            window.location.href = 'https://localhost:7044/Myproject/SellerDashBoradPage';
        });
        $('#logout').click(function () {

            window.location.href = 'https://localhost:7044/Myproject/AdminLogin';
        });
        
    </script>

</body>
</html>
<script src="~/content/js/newfolder/sellcardetail.js"></script>

