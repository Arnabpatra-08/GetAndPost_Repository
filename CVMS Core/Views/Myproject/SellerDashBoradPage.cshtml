@model CVMSCore.BAL.Models.Car_model.Buylogin
@{
    ViewData["Title"] = "SellerDashBoradPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Expletus+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="~/css/style.css" rel="stylesheet" />
    <style>
        /*  body {
                    font-family: Arial, sans-serif;
                    background-color: #f4f4f4;
                    margin: 0;
                    padding: 0;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    height: 100vh;
                }

                form {
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                } */

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>


   
    <div class="container-fluid" id="dashboard" >
        <nav class="navbar navbar-expand-lg navbar-light bg-info">
            <a class="navbar-brand" href="#">Seller Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  
                    <li class="nav-item active">
                        <a class="nav-link" id="home-btn" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" id="Buyer-btn" href="#">Want To Buy <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="seller-btn" href="#">Want To Sell</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="status" href="#">Status</a>

                    </li>
                    <li class="nav-item nav-item-right" style="margin-left: 20px;">
                        <h3>Welcome  <span id="cuname">@ViewBag.LoggedInName</span></h3>

                    </li>
                    <li class="nav-item nav-item-right" style="margin-left: 300px;">
                        <a href="#" id="logout" class="nav-link badge badge-success">Logout</a>
                    </li>
                   
                </ul>
            </div>
        </nav>
        <input type="hidden" id="LoggedInName" value="@ViewBag.LoggedInName" />


        <div id="sellerTableContainer" style="display: none;">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">S no.</th>
                        <th scope="col">Customer  Name</th>
                        <th scope="col">Mobile No</th>
                        <th scope="col">Model Name</th>
                        <th scope="col">Car Price</th>
                        <th scope="col">Maker Name</th>
                        <th scope="col">UsageYears</th>
                        <th scope="col">Car Colour</th>
                        <th scope="col">Condition</th>
                        <th scope="col">Mileage</th>
                        <th scope="col">Remarks</th>
                       
                    </tr>
                </thead>
                <tbody id="BuyerTable">
                    <!-- Table content will be dynamically generated here -->
                </tbody>
            </table>
        </div>
        <div style="width:100%" id="body">
            <img src="~/content/newfolder/customer.jpg" style="width:100%">
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        $('#home-btn').click(function () {
            window.location.href = 'https://localhost:7044/Myproject/SellerDashBoradPage';
        });
        $('#Buyer-btn').click(function () {
            window.location.href = 'https://localhost:7044/Myproject/Buyerhomepage';
        });
        $('#seller-btn').click(function () {
            window.location.href = 'https://localhost:7044/Myproject/Sellerhomepage';
        });
        $('#status').click(function () {
            $('#body').hide();
            $('#sellerTableContainer').show();
        });
        $('#buysign-btn').click(function () {
            window.location.href = 'https://localhost:7044/Myproject/CustomerSignuppage';
        });
        $('#logout').click(function () {
            window.location.reload();
            window.location.href = 'https://localhost:7044/Myproject/AdminLogin';
        });
    </script>

</body>
</html>
<script src="~/content/js/newfolder/customerdashjquery.js"></script>

